<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeepay.yop.scenario.bindcard.infrastructure.tunnel.mapper.GoodsMapper">
    <resultMap id="resultMap" type="com.yeepay.yop.scenario.bindcard.infrastructure.tunnel.dataobject.GoodsDO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

    <insert id="insert">
        insert into tbl_goods(id, gmt_create, gmt_modified, name, price)
        values (#{id}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP, #{name}, #{price})
    </insert>

    <update id="updateById">
        update tbl_goods
        set gmt_modified = CURRENT_TIMESTAMP,
            name         = #{et.name},
            price        = #{et.price}
        where id = #{et.id}
    </update>

    <select id="selectById" resultMap="resultMap">
        select *
        from tbl_goods
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete
        from tbl_goods
        where id = #{id}
    </delete>

    <select id="findAll" resultType="com.yeepay.yop.scenario.bindcard.infrastructure.tunnel.dataobject.GoodsDO">
        select *
        from tbl_goods
    </select>

</mapper>