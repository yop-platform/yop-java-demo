<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeepay.yop.scenario.bindcard.infrastructure.tunnel.mapper.UserMapper">
    <resultMap id="resultMap" type="com.yeepay.yop.scenario.bindcard.infrastructure.tunnel.dataobject.UserDO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="idCardType" column="id_card_type"/>
        <result property="cardNo" column="card_no"/>
        <result property="phone" column="phone"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

    <insert id="insert">
        insert into tbl_user(id, gmt_create, gmt_modified, name, type, id_card_type, card_no, phone)
        values (#{id}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP, #{name}, #{type}, #{idCardType}, #{cardNo}, #{phone})
    </insert>

    <update id="updateById">
        update tbl_user
        set gmt_modified = CURRENT_TIMESTAMP,
            name         = #{et.name},
            type         = #{et.type},
            id_card_type = #{et.idCardType},
            card_no      = #{et.cardNo},
            phone        = #{et.phone}
        where id = #{et.id}
    </update>

    <select id="selectById" resultMap="resultMap">
        select *
        from tbl_user
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete
        from tbl_user
        where id = #{id}
    </delete>

    <select id="findAll" resultType="com.yeepay.yop.scenario.bindcard.infrastructure.tunnel.dataobject.UserDO">
        select *
        from tbl_user
    </select>

</mapper>